<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

  <% if PostPolicy.new(current_user, @post).publish? %>
    <div class ="row collapse">
      <div class="small-3 columns">
        <%= f.label :published, class: "right inline", title: "Is this post published?", data: {tooltip: true} %>
        <br>
      </div>

      <div class="small-9 columns">
        <%= f.check_box :published %>
      </div>
    </div>
  <% end %>

<% end %>
