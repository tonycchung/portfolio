<p id="notice"><%= notice %></p>

<p id="author">
  <b>By:</b>
  <%= @post.author.email %>
</p>

<p id="status">
  <b>Status:</b>
  <%= @post.published? ? "Published" : "Unpublished" %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <b>Leave a Comment:</b>
    <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
