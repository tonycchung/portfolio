<h1 align="center">Contact Me!</h1>

<%= form_tag("/contact", method: "post") do %>
  <%= label_tag (:name) %>
  <%= text_field_tag (:name) %>

  <%= label_tag (:email) %>
  <%= text_field_tag (:email) %>

  <%= label_tag (:message) %>
  <%= text_field_tag (:message) %>

  <%= submit_tag("Submit") %>
<% end %>